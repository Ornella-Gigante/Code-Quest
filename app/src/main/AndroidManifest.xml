<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodeQuestAdventure"
        tools:targetApi="31">

        <!-- MainActivity - Pantalla principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- GameActivity - Pantalla del juego -->
        <activity
            android:name=".GameActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            <!-- Navegación hacia atrás -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- TutorialActivity - Tutorial -->
        <activity
            android:name=".TutorialActivity"
            android:exported="false"
            android:screenOrientation="portrait" />


        <activity android:name=".LeaderboardActivity" />


        <!-- Servicio de música de fondo persistente -->
        <service
            android:name="MusicService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>
