<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/main"
            android:contentDescription="Code Quest Adventure Logo"
            android:layout_marginBottom="40dp"
            android:scaleType="centerCrop"
            android:elevation="8dp"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🧩 Code Quest Adventure"
            android:textSize="42sp"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn to code by revealing hidden pictures!"
            android:textSize="24sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:lineSpacingExtra="8dp"
            android:maxWidth="480dp"/>


        <!-- Progress Text -->
        <TextView
            android:id="@+id/scoreStreakText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Score: 0   Streak: 0"
            android:textColor="#607D8B"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress: 0/10 challenges completed"
            android:textSize="20sp"
            android:textColor="#777777"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="400dp"
            android:layout_height="16dp"
            android:max="10"
            android:progress="0"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#E0E0E0"
            android:layout_marginBottom="40dp"/>

        <!-- Buttons -->
        <Button
            android:id="@+id/startButton"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:text="🚀 New Game"
            android:textSize="24sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:elevation="8dp"/>

        <Button
            android:id="@+id/continueButton"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:text="📖 Continue Adventure"
            android:textSize="24sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:elevation="8dp"/>

        <Button
            android:id="@+id/leaderboardButton"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:text="🏆 Leaderboard"
            android:textSize="20sp"
            android:backgroundTint="#795548"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:elevation="6dp"
            android:layout_marginBottom="20dp"/>


        <!-- Tutorial Button -->
        <Button
            android:id="@+id/tutorialButton"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:text="📖 Tutorial"
            android:textSize="24sp"
            android:backgroundTint="#FFA000"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:elevation="8dp"/>

        <Button
            android:id="@+id/difficultyButton"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:text="⚙️ Change Difficulty"
            android:textSize="20sp"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:elevation="6dp"
            android:layout_marginBottom="20dp"/>

        <!-- Reset Progress Button -->
        <Button
            android:id="@+id/resetProgressButton"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:text="🔄 Reset Progress"
            android:textSize="20sp"
            android:backgroundTint="#f44336"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:elevation="6dp"/>

        <!-- Level Display -->
        <TextView
            android:id="@+id/difficultyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Level: 🐣 Beginner"
            android:textSize="22sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif"/>

        <!-- Additional Info -->
        <TextView
            android:id="@+id/additionalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 challenges • Hidden Picture • Basic Java"
            android:textSize="18sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:maxWidth="480dp"/>
    </LinearLayout>
</ScrollView>
