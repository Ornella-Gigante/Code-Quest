<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Logo/Image with proper scaling -->
        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/unicorn"
            android:contentDescription="Code Quest Adventure Logo"
            android:layout_marginBottom="40dp"
            android:scaleType="centerCrop"
            android:elevation="8dp"/>

        <!-- Main Title - Larger for tablet -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§© Code Quest Adventure"
            android:textSize="42sp"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- Subtitle with better spacing -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn to code by revealing hidden pictures!"
            android:textSize="24sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:maxWidth="480dp"
            android:lineSpacingExtra="4dp"/>

        <!-- Progress Text -->
        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress: 0/10 challenges completed"
            android:textSize="20sp"
            android:textColor="#777777"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Progress Bar - Wider for tablet -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="400dp"
            android:layout_height="12dp"
            android:max="10"
            android:progress="0"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#E0E0E0"
            android:layout_marginBottom="56dp"/>

        <!-- Buttons with improved spacing -->
        <Button
            android:id="@+id/startButton"
            android:layout_width="320dp"
            android:layout_height="72dp"
            android:text="ðŸš€ New Game"
            android:textSize="24sp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/continueButton"
            android:layout_width="320dp"
            android:layout_height="72dp"
            android:text="ðŸ“– Continue Adventure"
            android:textSize="24sp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:textAllCaps="false"
            android:elevation="8dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/difficultyButton"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:text="âš™ï¸ Change Difficulty"
            android:textSize="20sp"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            android:layout_marginBottom="32dp"
            android:textAllCaps="false"
            android:elevation="6dp"/>

        <!-- Level Display -->
        <TextView
            android:id="@+id/difficultyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Level: ðŸŒ± Beginner"
            android:textSize="22sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:fontFamily="sans-serif"/>

        <!-- Additional Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 challenges â€¢ Hidden Picture â€¢ Basic Java"
            android:textSize="18sp"
            android:textColor="#888888"
            android:gravity="center"
            android:maxWidth="480dp"/>

    </LinearLayout>

</ScrollView>
