<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo degradado (drawable/background_gradient) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_gradient" />

    <!-- Vista de estrellas animadas -->
    <es.nellagames.codequestadventure.StarBackgroundView
        android:id="@+id/starBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Contenido principal sobre las estrellas -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:gravity="center">



        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§© Code Quest Adventure"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:elevation="6dp"/>

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tutorial1_fun"
            android:contentDescription="Unicorn Logo"
            android:background="@drawable/circle_avatar_bg"
            android:layout_marginBottom="32dp"
            android:elevation="8dp"/>

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your username"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:background="@drawable/rounded_dialog_background"
            android:padding="14dp"
            android:textColor="#222"
            android:textColorHint="#AA88CC"
            android:elevation="6dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnLogin"
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ECAA"
            android:textColor="#34495E"
            android:textSize="19sp"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnCreateUser"
            android:text="Create User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFD700"
            android:textColor="#34495E"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="14dp"
            android:elevation="8dp"/>

    </LinearLayout>
</FrameLayout>
