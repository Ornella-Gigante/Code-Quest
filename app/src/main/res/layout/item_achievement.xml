<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/item_background">

    <ImageView
        android:id="@+id/achievementStatusIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Achievement Status Icon"
        android:background="@drawable/circle_white_shadow"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_lock_lock" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/achievementTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Achievement Title"
            android:textColor="#34495E"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/achievementDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Achievement Description"
            android:textColor="#777777"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
